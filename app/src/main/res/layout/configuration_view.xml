<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaaaaa"
    android:gravity="center"
    tools:context=".views.InitialConfigView">

    <data>
        <variable
            name="viewModel"
            type="com.example.cs2340game.viewmodels.InitialConfigViewModel" />
    </data>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/leftGuideline"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="40dp"
        android:text="Enter Your Name:"
        android:textSize="20sp"
        />

    <ImageView
        android:id="@+id/circle_sprite"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/topGuideline"
        app:layout_constraintLeft_toRightOf="@id/leftGuideline"
        app:srcCompat="@drawable/circle_sprite" />

    <ImageView
        android:id="@+id/square_sprite"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/topGuideline"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:srcCompat="@drawable/square_sprite" />

    <ImageView
        android:id="@+id/triangle_sprite"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/topGuideline"
        app:layout_constraintRight_toLeftOf="@id/rightGuideline"
        app:srcCompat="@drawable/triangle_sprite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/rightGuideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomGuideline"
        android:text="NEXT"
        android:backgroundTint="#700000"
        android:onClick="@{()-> viewModel.onButtonClicked()"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/topGuideline"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/leftGuideline"
        app:layout_constraintGuide_percent="0.12"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/rightGuideline"
        app:layout_constraintGuide_percent="0.88"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/bottomGuideline"
        app:layout_constraintGuide_percent="0.90"
        />

</layout>